    "paths": {
        "/menber/setup": {
            "post": {
                "tags": ["成員相關"],
                "summary": "新增成員並賦予會員ID",
                "parameters": [{
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "interests",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "neckname",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "occupation",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "introduction",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/menber/quary": {
            "get": {
                "tags": ["成員相關"],
                "summary": "依據會員ID查詢對應資訊",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Menber",
                            "schema": {
                                "$ref": "#/definitions/Menber"
                            }
                        }
                    },
                    "400": {
                        "description": "data{user_id}.{parameter} is not defined"
                    }
                }
            }
        },
        "/interests/add": {
            "post": {
                "tags": ["讀書會類別"],
                "summary": "新增讀書會類別",
                "parameters": [{
                    "name": "name",
                    "description": "欲增加的新類別名稱",
                    "in": "path",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "data{user_id}.{parameter} is not defined"
                    }
                }
            }
        },
        "/interests/delete": {
            "delete": {
                "tags": ["讀書會類別"],
                "summary": "刪除特定的讀書會類別",
                "parameters": [{
                    "name": "name",
                    "description": "欲刪除的新類別名稱",
                    "in": "path",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Category"
                        }
                    },
                    "400": {
                        "description": "data{user_id}.{parameter} is not defined"
                    }
                }
            }
        },
        "/interests/recover": {
            "put": {
                "tags": ["讀書會類別"],
                "summary": "恢復讀書會類別到原先的十種",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Category"
                        }
                    },
                    "400": {
                        "description": "data{user_id}.{parameter} is not defined"
                    }
                }
            }
        },
        "/interests/quary": {
            "get": {
                "tags": ["讀書會類別"],
                "summary": "檢索現有的讀書會類別",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Category"
                        }
                    },
                    "400": {
                        "description": "data{user_id}.{parameter} is not defined"
                    }
                }
            }
        }
